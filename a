}
}
void menuPrincipal(){
int decision;
system("CLS");
cout<<"Ingresar como:"<<endl<<"1. Vendedor"<<endl<<"2. Administrador"<<endl<<endl<<"0. Salir"<<endl;
cin>>decision;
if (decision<0 || decision>2){
errorDecision();
menuPrincipal();
}
switch (decision){
default:
system("CLS");
cout<<"Vuelve pronto";
break;
case 1:
vendedor();
break;
case 2:
administrador();
break;
}
}
void errorDecision(){
system("CLS");
cout<<"OPCION NO VALIDA"<<endl;
Sleep(2500);
}
